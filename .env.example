# General Settings
HOSTNAME_MONITOR=monitor.example.com        # Set this to your domain or IP where the monitoring stack is accessible
LISTEN_PORT=443                            # Port for Nginx to listen on (default: 443)
USE_SELF_SIGNED_TLS=true                   # Whether to generate self-signed certificates automatically (true/false)

# Authentication
BASIC_AUTH_USER=admin                      # Username for Basic Auth (Nginx protection for Prometheus, Alertmanager, etc.)
BASIC_AUTH_PASSWORD=your_strong_password_here  # Strong password for Basic Auth
GF_SECURITY_ADMIN_USER=admin               # Grafana admin username
GF_SECURITY_ADMIN_PASSWORD=your_strong_password_here  # Strong password for Grafana admin

# Email/SMTP Configuration
ALERT_SMTP_SMARTHOST=smtp.gmail.com:587    # SMTP server (e.g., smtp.gmail.com:587)
ALERT_SMTP_FROM=monitoring@example.com     # Email address that sends alerts (e.g., monitoring@example.com)
ALERT_SMTP_USER=monitoring@example.com     # SMTP username (usually same as FROM)
ALERT_SMTP_PASS=your_gmail_app_password    # Use Gmail App Password for SMTP (if using Gmail)
ALERT_EMAIL_TO=alerts@example.com         # Email address to receive alerts

# TLS Certificate Paths (when USE_SELF_SIGNED_TLS=false)
TLS_CRT_PATH=./secrets/tls.crt            # Path to your TLS certificate (default: ./secrets/tls.crt)
TLS_KEY_PATH=./secrets/tls.key            # Path to your TLS private key (default: ./secrets/tls.key)

# Optional Variables

# Alertmanager Timing
ALERT_GROUP_WAIT=30s                      # Wait before sending first alert (default: 30s)
ALERT_GROUP_INTERVAL=5m                   # Wait between alert groups (default: 5m)
ALERT_REPEAT_INTERVAL=3h                  # Repeat alerts interval (default: 3h)

# Loki Configuration
LOKI_RETENTION_HOURS=720h                 # Log retention period (default: 720h = 30 days)
LOKI_MAX_QUERY_LENGTH=721h                # Maximum query length (default: 721h)
LOKI_MAX_QUERY_PARALLELISM=32             # Maximum query parallelism (default: 32)
LOKI_INGESTION_RATE_MB=16                 # Ingestion rate limit in MB/s (default: 16)
LOKI_INGESTION_BURST_SIZE_MB=32           # Ingestion burst size in MB (default: 32)
LOKI_CACHE_SIZE_MB=100                    # Cache size for query results in MB (default: 100)

# Nginx Configuration
USE_TLS=true                               # Enable TLS/HTTPS (default: true)

# Security Alert Thresholds (Optional - used in Prometheus rules)
CERT_EXPIRY_DAYS=7                        # Certificate expiration warning (default: 7)
HIGH_PROCESS_THRESHOLD=500                # Process count threshold (default: 500)
HIGH_CONNECTION_THRESHOLD=1000            # Network connection threshold (default: 1000)
MEMORY_GROWTH_THRESHOLD=100000000         # Memory growth threshold in bytes (default: 100000000)
IO_WAIT_THRESHOLD=50                      # I/O wait threshold percentage (default: 50)

# Advanced Features (Future)
ENABLE_OAUTH2=false                       # Enable OAuth2 proxy (default: false)
ENABLE_AUTO_CERTS=false                   # Enable automatic certificate management (default: false)

# Advanced Alerting (Optional)
ALERT_SLACK_WEBHOOK_URL=your_slack_webhook_url  # Slack webhook URL for alerts
ALERT_PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key  # PagerDuty integration key
ALERT_DISCORD_WEBHOOK_URL=your_discord_webhook_url  # Discord webhook URL
ALERT_TEAMS_WEBHOOK_URL=your_teams_webhook_url  # Microsoft Teams webhook URL

# IP Whitelisting (Optional)
ALLOWED_IPS=192.168.1.0/24,203.0.113.0/24  # Comma-separated list of IPs/networks to allow access
