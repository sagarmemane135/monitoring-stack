{
  "id": null,
  "title": "Monitoring Stack Overview",
  "tags": ["infrastructure", "docker", "system"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "row",
      "title": "System Metrics",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "gauge",
      "title": "CPU Usage (%)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 75 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 }
    },
    {
      "type": "gauge",
      "title": "Memory Usage (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 }
    },
    {
      "type": "gauge",
      "title": "Disk Usage (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "(1 - (node_filesystem_free_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 }
    },
    {
      "type": "row",
      "title": "Container Metrics",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 }
    },
    {
      "type": "timeseries",
      "title": "Container CPU Usage (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{image!=\"\"}[2m]) * 100"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 }
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage (MB)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "container_memory_usage_bytes{image!=\"\"} / 1024 / 1024" }
      ],
      "fieldConfig": { "defaults": { "unit": "megabytes" } },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 }
    },
    {
      "type": "row",
      "title": "Blackbox Probes",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 }
    },
    {
      "type": "timeseries",
      "title": "Probe Success",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "probe_success" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 19 }
    },
    {
      "type": "timeseries",
      "title": "Probe Duration (ms)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "probe_duration_seconds * 1000" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 19 }
    },
    {
      "type": "row",
      "title": "Alertmanager",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 }
    },
    {
      "type": "stat",
      "title": "Active Alerts",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "ALERTS{alertstate=\"firing\"}" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 28 }
    }
  ]
}
